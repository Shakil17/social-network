<% include _header %>
<h1>Edit your profile</h1>
<form action= "/edit" method= "post">
  <input type= "text" value= "<%= currentUser.displayName || "" %>" name= "displayName" placeholder= "Display name" class= "form-control">
  <textarea name= "bio" class= "form-control" placeholder= "Tell us something about yourself!">
  <%= currentUser.bio || "" %>
  </textarea>
  <input type= "submit" value= "Update" class= "btn btn-primary btn-block">
</form>
<% include _footer %>